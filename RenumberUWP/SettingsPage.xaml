<Page x:Name="settings"
    x:Class="RenumberUWP.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RenumberUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="settings_Loaded">

    <Grid Margin="0,0,-1133,0">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF070074" Offset="0"/>
                <GradientStop Color="#FF68D6F7" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock x:Name="numberText" Margin="50,50,10,323" TextWrapping="Wrap" Text="How many numbers do you want to remember?" FontSize="70" FontFamily="Consolas"/>
        <Button x:Name="goButton" Margin="0,0,50,50" Content="GO" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Height="98" Width="178" FontFamily="Consolas" FontSize="53.333" Background="#330BAB52" Foreground="#FF024C20" BorderBrush="#FF02693B"/>
        <TextBox x:Name="textBox" Margin="793,441,775,337" TextWrapping="Wrap" Text="" FontSize="90" />
    </Grid>
</Page>
